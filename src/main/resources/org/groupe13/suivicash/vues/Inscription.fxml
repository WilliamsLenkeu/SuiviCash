<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.groupe13.suivicash.InscriptionController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Contenu de l'AnchorPane -->
    <VBox spacing="10" alignment="CENTER">

        <!-- Formulaire pour Entrer Mot de Passe -->
        <VBox fx:id="passwordForm" visible="true" alignment="CENTER" spacing="5">
            <Label text="Entrez votre mot de passe" />
            <PasswordField fx:id="passwordField" promptText="Mot de Passe" />
            <!-- Ajoutez d'autres éléments au besoin -->
            <Button text="Valider" onAction="#validerMotDePasse" />
        </VBox>

    </VBox>
</AnchorPane>
