<AnchorPane prefHeight="235.0" prefWidth="400.0" style="-fx-background-color: #48358E;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.groupe13.suivicash.AjoutBanqueController">
    <children>
        <VBox alignment="CENTER" layoutX="16.0" layoutY="23.0" prefHeight="198.0" prefWidth="365.0" spacing="10.0">
            <children>
                <Label prefHeight="38.0" prefWidth="259.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter une nouvelle banque" textFill="WHITE">
               <font>
                  <Font name="Montserrat Regular" size="31.0" />
               </font></Label>
                <HBox spacing="5">
                    <Label text="Nom de la banque:" textFill="WHITE">
                  <font>
                     <Font name="Montserrat Light" size="12.0" />
                  </font></Label>
                    <TextField fx:id="nomBanqueField" prefHeight="25.0" prefWidth="216.0" />
                </HBox>
                <HBox spacing="5">
                    <Label prefHeight="18.0" prefWidth="100.0" text="Solde:" textFill="WHITE">
                  <font>
                     <Font name="Montserrat Light" size="12.0" />
                  </font></Label>
                    <TextField fx:id="soldeField" prefHeight="25.0" prefWidth="190.0" />
                </HBox>
                <Button onAction="#handleAjouterBanque" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Ajouter" />
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
