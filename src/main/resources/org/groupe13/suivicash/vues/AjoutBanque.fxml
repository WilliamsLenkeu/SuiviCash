<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.groupe13.suivicash.AjoutBanqueController">
    <children>
        <VBox alignment="CENTER" layoutX="72.0" layoutY="23.0" spacing="10.0">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter une nouvelle banque" />
                <HBox spacing="5">
                    <Label text="Nom de la banque:" />
                    <TextField fx:id="nomBanqueField" />
                </HBox>
                <HBox spacing="5">
                    <Label prefHeight="18.0" prefWidth="100.0" text="Solde:" />
                    <TextField fx:id="soldeField" />
                </HBox>
                <Button onAction="#handleAjouterBanque" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Ajouter" />
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
