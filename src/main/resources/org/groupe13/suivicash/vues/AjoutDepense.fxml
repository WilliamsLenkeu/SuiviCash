<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="603.0" style="-fx-background-color: #48358E;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER" layoutX="119.0" layoutY="53.0" prefHeight="294.0" prefWidth="362.0" spacing="15.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajout de Dépense" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font></Label>

        <!-- Label pour "Ajout de Dépense" -->
        <Label prefHeight="18.0" prefWidth="114.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Ajout de Dépense" />

        <!-- DatePicker pour la date -->
        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="68.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Date :" />
            <DatePicker fx:id="datePicker" style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
        </HBox>

        <!-- TextField pour le montant -->
        <HBox spacing="5.0">
            <Label prefHeight="30.0" prefWidth="122.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Montant :" textFill="WHITE" />
            <TextField fx:id="montantField" style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
        </HBox>

        <HBox spacing="5.0">
            <Label prefHeight="20.0" prefWidth="123.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Banque: " textFill="WHITE" />
            <ChoiceBox fx:id="banqueChoiceBox" style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
        </HBox>

        <HBox spacing="5.0">
            <Label prefHeight="20.0" prefWidth="122.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Description :" textFill="WHITE" />
            <TextField fx:id="descriptionField" style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
            <Label prefHeight="18.0" prefWidth="70.0" styleClass="label" text="Montant :" />
            <TextField fx:id="montantField" prefHeight="26.0" prefWidth="172.0" />
        </HBox>

        <!-- ChoiceBox pour la banque -->
        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="69.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Banque: " />
            <ChoiceBox fx:id="banqueChoiceBox" style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
        </HBox>

        <!-- TextField pour la description -->
        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="69.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Description :" />
            <TextField fx:id="descriptionField" style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
        </HBox>

        <!-- Bouton "Ajouter Dépense" -->
        <Button onAction="#HandleAjouterDepense" style="-fx-font-size: 14px; -fx-pref-width: 150px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Ajouter Dépense" />

        <!-- Padding pour l'espacement -->
        <padding>
            <Insets bottom="15.0" left="40.0" right="15.0" top="15.0" />
        </padding>
    </VBox>

</AnchorPane>