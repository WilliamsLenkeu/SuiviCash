<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <FXCollections fx:factory="observableArrayList">
            <String fx:value="                 .label {                     -fx-font-size: 14px;                     -fx-text-fill: #333333;                 }                  .text-field, .choice-box {                     -fx-font-size: 14px;                     -fx-pref-width: 200px;                 }                  .button {                     -fx-font-size: 14px;                     -fx-pref-width: 150px;                     -fx-background-color: #4CAF50;                     -fx-text-fill: white;                 }                  .button:hover {                     -fx-background-color: #45a049;                 }             " />
        </FXCollections>
    </stylesheets>

    <VBox alignment="CENTER" layoutX="119.0" layoutY="53.0" prefHeight="294.0" prefWidth="362.0" spacing="15.0">
        <Label prefHeight="18.0" prefWidth="114.0" styleClass="label" text="Ajout de Dépense" />

        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="68.0" styleClass="label" text="Date :" />
            <DatePicker fx:id="datePicker" />
        </HBox>

        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="70.0" styleClass="label" text="Montant :" />
            <TextField fx:id="montantField" prefHeight="26.0" prefWidth="172.0" />
        </HBox>

        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="69.0" styleClass="label" text="Banque: " />
            <ChoiceBox fx:id="banqueChoiceBox" prefHeight="26.0" prefWidth="173.0" />
        </HBox>

        <HBox spacing="5.0">
            <Label prefHeight="18.0" prefWidth="69.0" styleClass="label" text="Description :" />
            <TextField fx:id="descriptionField" prefHeight="26.0" prefWidth="171.0" />
        </HBox>

        <Button onAction="#HandleAjouterDepense" styleClass="button" text="Ajouter Dépense" />
        <padding>
            <Insets bottom="15.0" left="40.0" right="15.0" top="15.0" />
        </padding>
    </VBox>

</AnchorPane>
