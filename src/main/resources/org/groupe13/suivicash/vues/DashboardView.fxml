<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="518.0" prefWidth="756.0" spacing="10" style="-fx-background-color: #5C6E5D;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.groupe13.suivicash.DashboardController">
    <ComboBox fx:id="yearComboBox" onAction="#updateCharts" />
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <children>
            <BarChart fx:id="depensesBarChart" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="150.0" prefWidth="343.0">
                <xAxis>
                    <CategoryAxis />
                </xAxis>
                <yAxis>
                    <NumberAxis tickLabelFill="WHITE" />
                </yAxis>
            </BarChart>
            <BarChart fx:id="revenusBarChart" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="150.0" prefWidth="371.0">
                <xAxis>
                    <CategoryAxis />
                </xAxis>
                <yAxis>
                    <NumberAxis tickLabelFill="#ebebeb" />
                </yAxis>
            </BarChart>
        </children>
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
    </HBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="42.0" prefWidth="729.0">
        <children>
            <Button fx:id="ajouterBanqueButton" onAction="#handleAjouterBanqueClick" style="-fx-background-color: #4CAF50;             -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Ajouter une Banque" />
        </children>
        <padding>
            <Insets right="10.0" />
        </padding>
    </HBox>
    <TableView fx:id="banqueTableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn prefWidth="150" text="Nom Banque">
                <cellValueFactory><PropertyValueFactory property="nomBanque" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="Solde (XAF)">
                <cellValueFactory><PropertyValueFactory property="solde" /></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Label style="-fx-font-size: 14px;" text="Total des soldes des banques: " textFill="WHITE" />
    <Label fx:id="totalSoldeLabel" style="-fx-font-size: 14px;" />
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
