<VBox prefHeight="518.0" prefWidth="806.0" spacing="15.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.groupe13.suivicash.DepenseController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <!--VBox pour la page d'accueil -->
        <VBox fx:id="MonVbox">
            <!--Changer de limites-->
            <HBox fx:id="LimiteChanger">
                <Label text="Ma limite de depense" ></Label>
                <Text text="" fx:id="MaLimite"></Text>
                <Button fx:id="SupprimerLimiteButton"  onAction="#handleSupprimerLimiteClick"
                        prefHeight="40.0" prefWidth="200.0" text="Supprimer la Limite"/>

                <Button fx:id="ChangerLimiteButton"  onAction="#handleChangerLimiteClick"
                        prefHeight="40.0" prefWidth="200.0" text="Changer Limite"/>

            </HBox>

            <!--Bouton pour ajouter une limite-->
            <HBox fx:id="AjouterLimite">

                <Button fx:id="AjouterLimiteButton"  onAction="#handleAjouterLimiteClick"
                        prefHeight="40.0" prefWidth="200.0" text="Ajouter une Limite"/>

            </HBox>

            <HBox>
                <Label text="Mon total de depense: "></Label>
                <Text fx:id="MonTotal" text=""/>
            </HBox>
            <ComboBox fx:id="MonthComboBox" onAction="#handleMonthFilterChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">

                    </FXCollections>
                </items>
            </ComboBox>

            <Text fx:id="Avertissement" text="Avertissons"></Text>
            <!--Liste Categorie-->
            <Button fx:id="AjouterCategorieButton"  onAction="#handleAjouterCategorieClick"
                    prefHeight="40.0" prefWidth="200.0" text="Ajouter CatÃ©gorie"/>

            <ListView fx:id="CategorieListView" prefHeight="800.0" prefWidth="766.0" />
        </VBox>

        <!--BorderPane pour la liste des depenses -->
        <BorderPane fx:id="Categorie" prefHeight="458.0" prefWidth="586.0">
            <center>
                <AnchorPane fx:id="mainContent" />
            </center>
        </BorderPane>
    </children>
</VBox>
